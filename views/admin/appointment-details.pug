meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
//  Boxicons 
link(href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css", rel="stylesheet")
//  My CSS 
link(rel="stylesheet", href="/css/dashboard.css")
title blood-bank
//  SIDEBAR 
section#sidebar
  a.brand(href="#")
    span.text SaveARed 
  ul.side-menu.top
    li.active
      a(href="#")
        i.bx.bxs-dashboard
        span.text appointment details
//  SIDEBAR 
//  CONTENT 
section#content
  //  NAVBAR 
  nav
    i.bx.bx-menu
    form(action="#")
      .form-input
        input(type="search", placeholder="Rechercher...")
        button.search-btn(type="submit")
          i.bx.bx-search
    input#switch-mode(type="checkbox", hidden)
    label.switch-mode(for="switch-mode") 
    a.notification(href="#")
      i.bx.bxs-bell
      span.num 8
    a.profile(href="#")
      img(src="../images/adming.svg")
      
      
  //  NAVBAR 
  //  MAIN 
  main
    .table-data
      .order
        .head
          h3 appointment details 
          i.bx.bx-search
          i.bx.bx-filter
        table
          tbody
            tr
            th appointment Date
            td= appointment.appointmentDate
            tr
            th appointment Time
            td= appointment.appointmentTime
            tr
            th Status
            td= appointment.status
            tr 
            td
              form(method="POST", action=`/admin/appointments/${appointment.id}/accept `)
                button.btn(type="submit" name="accept" value="Accept") Accept
              form(method="POST", action=`/admin/appointments/${appointment.id}/delete`)
                button.btn(type="submit" name="delete" value="Delete") Delete
              form(method="get", action=`/admin/dashboard`)
                button.btn(type="submit" ) back to dashboard

  //  MAIN 
//  CONTENT 
script(src="../js/dashboard.js")
script.
  const voirButtons = document.querySelectorAll('.voir-btn');
  voirButtons.forEach((button) => {
    button.addEventListener('click', (event) => {
      const formId = button.dataset.formId;
      window.location.href = `/admin/forms/${formId}/details`;
    });
  });