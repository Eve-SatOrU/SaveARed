doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        h1 appointment Details
        table
            tr
            th appointment Date
            td= appointment.appointmentDate
            tr
            th appointment Time
            td= appointment.appointmentTime
            tr
            th Status
            td= appointment.status
        form(method="POST", action=`/admin/appointments/${appointment.id}/accept `)
          button(type="submit" name="accept" value="Accept") Accept
        form(method="POST", action=`/admin/appointments/${appointment.id}/delete`)
          button(type="submit" name="delete" value="Delete") Delete
