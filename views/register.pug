//  Header Section Starts 
.header
  a.logo(href="/")
    i.fas.fa-heartbeat
    |  SaveARed
  nav.navbar
    a(href="/" , class=(path === '/' ? 'active' : '')) home
    a(href="/about") about
    a(href="/contact") contact us
    if user
      if user.userType === 'donor'
        a(href="/appointment-form", class=(path === '/donor-landing' ? 'active' : '')) appointment
      else if user.userType === 'receiver'
        a(href="/landing", class=(path === '/appointment-form' ? 'active' : '')) request
      a( href=`/profile/${user.id}`,class=(path === '/profile' ? 'active' : '')) Profile
      a(href="/logout") logout
    else
      a(href="/register" , class=(path === '/register' ? 'active' : '')) register
      a(href="/login" , class=(path === '/login' ? 'active' : '')) login
  #menu-btn.fas.fa-bars
//  Header Section End 
section.home
header
section.book
  .row
    .image
      img(src="./images/register.svg", alt)
    form(action="/register", method="post")
      h3 register
      label.label(for="userName") Username
      input.box(type="text", name="userName", placeholder="Type your username", required)#userName
      label.label(for="email") Email
      input.box(type="email", name="email", placeholder="Type your email", required)#email
      label.label(for="userPassword") Password
      input.box(type="password", name="userPassword", placeholder="Type your password", required)#userPassword
      label.label(for="sex") Sex
      select#sex.box(name="sex")
        option(value="male") Male
        option(value="female") Female
      label.label(for="dateOfBirth") Date of Birth
      input.box(type="date", name="dateOfBirth", required)#dateOfBirth
      label.label(for="phone") Phone
      input.box(type="tel", name="phone", placeholder="Type your phone number", required)#phone
      label.label(for="bloodGroup") Blood Group
      select#bloodGroup.box(name="bloodGroup", required)
        option(value="A+") A+
        option(value="A-") A-
        option(value="B+") B+
        option(value="B-") B-
        option(value="AB+") AB+
        option(value="AB-") AB-
        option(value="O+") O+
        option(value="O-") O-
      label.label(for="bloodGroup") userType
      select#userType.box(name="userType", required)
        option(value="donor") Donor
        option(value="receiver") Receiver
      button.btn(type="submit") Register
      a(href="/login") 
        h4 Already have an account?



