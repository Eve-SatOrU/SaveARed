meta(charset="UTF-8")
meta(http-equiv="X-UA-Compatible", content="IE=edge")
meta(name="viewport", content="width=device-width,initial-scale=1")
title SaveARed 
//  Page Icon 
link(rel="shortcut icon", href="./images/heartbeat-solid.svg", type="./images/x-icon")
//  font-awesome 
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
//  Custom Css File Link 
link(rel="stylesheet", href="./css/style.css")
//  Header Section Starts 
.header
  a.logo(href="/")
    i.fas.fa-heartbeat
    |  SaveARed
  nav.navbar
    a(href="/" , class=(path === '/' ? 'active' : '')) home
    a(href="/about") about
    a(href="/contact") contact us
    if userType
      a(href="/landing", class=(path === '/appointment-form' ? 'active' : '')) request
      a( href=`/profile/${user.id}`,class=(path === '/profile' ? 'active' : '')) Profile
      a(href="/logout") logout
    else
      a(href="/register" , class=(path === '/register' ? 'active' : '')) register
      a(href="/login" , class=(path === '/login' ? 'active' : '')) login
  #menu-btn.fas.fa-bars
//  Header Section End 
section.home
header
section.book
  .row
    form(action="/admin/form-submission", method="POST")
      h1 Blood request
      label.label(for="fullName") full name
      input#fullName.box(type="text", name="fullName", placeholder="Entrer votre nom et prenom")
      label.label(for="address") Address
      input#address.box(type="text", name="address", placeholder="Entrer l\'adresse")
      label.label(for="email") Email
      input#email.box(type="email", name="email", placeholder="Entrer l\'email")
      label.label(for="phoneNumber") Phone Number
      input#phoneNumber.box(type="text", name="phoneNumber", placeholder="Entrer le numero de telephone ")
      label.label(for="quantity") amount of blood
      input#quantity.box(type="text", name="quantity", placeholder="Enter quantite du sang  ")
      .gender-details-box
        span.gender-title Genre 
        .gender-category
          input#male(type="radio", name="gender")
          label(for="male") Male
          input#female(type="radio", name="gender")
          label(for="female") Femelle
      .blood-details-box
        span.blood-title Groupe du sang 
        .blood-groups
          input#Oplus(type="radio", name="bloodGroup")
          label(for="Oplus") O+
          input#Ominus(type="radio", name="bloodGroup")
          label(for="Ominus") O-
          input#Aplus(type="radio", name="bloodGroup")
          label(for="Aplus") A+
          input#Aminus(type="radio", name="bloodGroup")
          label(for="Aminus") A-
          input#Bplus(type="radio", name="bloodGroup")
          label(for="Bplus") B+
          input#Bminus(type="radio", name="bloodGroup")
          label(for="Bminus") B-
          input#ABplus(type="radio", name="bloodGroup")
          label(for="ABplus") AB+
          input#ABminus(type="radio", name="bloodGroup")
          label(for="ABminus") AB-
      .form-submit-btn
        button.btn(type="submit", value="Demander")






